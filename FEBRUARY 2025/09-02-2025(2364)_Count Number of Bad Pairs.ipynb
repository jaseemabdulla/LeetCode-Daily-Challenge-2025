    "def countBadPairs(nums):\n",
    "        ans = 0\n",
    "        count = collections.Counter() \n",
    "        for i, num in enumerate(nums):\n",
    "            ans += i - count[num - i]\n",
    "            count[num - i] += 1\n",
    "        return ans"
